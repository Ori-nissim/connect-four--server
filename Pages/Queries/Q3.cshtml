@page
@model connect_four__server.Pages.Queries.Q3
@{
    <h1>
        All games
    </h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].PlayerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game[0].Duration)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Game[0].Moves)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Game)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Moves)
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>

    <br />
    <a asp-area="" asp-page="/Queries/Queries"> &#8592; Back to all Queries </a>

}
  